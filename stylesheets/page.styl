	color $font-color
	background-color $bg-color
		
flex($direction = row, $justify = center, $items = center)
	display flex
	flex-direction $direction
	justify-content $justify
	align-items $items	

inlineFlex($direction = row, $justify = center, $items = center)
	display inline-flex
	flex-direction $direction
	justify-content $justify
	align-items $items
	
$page-horinzontal-margin-mobile = 15px;
$page-horinzontal-margin = 45px;

// brand
a.my-brand 
	position relative
	text-decoration none
	color $font-color 
	
	&:after
		position absolute
		content ''
		display block
		width 100%
		height 100%
		left 3.5px
		top 3.5px
		z-index -1
	
	&.__primary
		&:after
			background-color rgba($primary-color, .28)
	
	&.__secondary
		&:after
			background-color rgba($secondary-color, .28)
	
	&.__terciary
		&:after
			background-color rgba($terciary-color, .28)
	
	&.__fourth
		&:after
			background-color rgba($fourth-color, .28)
	
	&.__fiveth
		&:after
			background-color rgba($fiveth-color, .28)
	
	> span
		flex()
		font-size 20px
		font-weight 400
		border solid 2px $font-color
		width 40px
		height 40px 
		z-index 1
		
// page header
header.page-header 
	position absolute
	width 100% 
	top 0
	left 0
	flex(row, space-between)
	padding-top 15px 
	padding-bottom 15px
	padding-left $page-horinzontal-margin-mobile 
	padding-right $page-horinzontal-margin-mobile 
	
	@media (min-width 768px)
		padding-left $page-horinzontal-margin 
		padding-right $page-horinzontal-margin 
		

	> .social-list
		> .social
			display inline-block
			width 18px
			height 18px
			
			& + .social 
				margin-left 10px

// me
section.me
	flex(column, center, flex-start)
	min-height 100vh
	padding-left $page-horinzontal-margin-mobile
	padding-right $page-horinzontal-margin-mobile
	margin-bottom 30px
	
	@media (min-width 768px)
		padding-left $page-horinzontal-margin 
		padding-right $page-horinzontal-margin 
		
	
	> .container
		font-size 34px
		max-width 768px
		padding-top 85px

		> .title
			font-size 1em
			font-weight 300
			margin-bottom 20px
			line-height 1.6em
			
			> .name
				font-weight 500

				&.__primary
					color $primary-color		
				
				&.__secondary
					color $secondary-color		
				
				&.__terciary
					color $terciary-color		
				
				&.__fourth
					color $fourth-color		
				
				&.__fiveth
					color $fiveth-color		
				
		> .about 
			font-size .55em
			line-height 1.6em
			font-weight 400
			
			> span.role
				font-weight 500
				
			> span.highlighted
				font-weight 500
					
				&.__primary
					color $primary-color		
				
				&.__secondary
					color $secondary-color		
				
				&.__terciary
					color $terciary-color		
				
				&.__fourth
					color $fourth-color		
				
				&.__fiveth
					color $fiveth-color	
					
	> .show-jobs-button
		flex()
		position relative 
		height 40px
		border solid 4px	
		margin-top 38px
		padding-left 10px
		padding-right 10px
		font-weight 400
		color $bg-color
		cursor pointer
		box-shadow 2px 3px 7px 0px rgba($font-color, .3)
		
		&:after
			content ''
			display block
			border solid 3px	
			position absolute
			width 100%
			height 100%
			left 4px
			top -10px
			z-index -1	
			
		&.__primary
			background-color $primary-color
			border-color $primary-color
			
			&:after
				border-color $primary-color
		
		&.__secondary
			background-color $secondary-color
			border-color $secondary-color
			
			&:after
				border-color $secondary-color
				
		&.__terciary
			background-color $terciary-color
			border-color $terciary-color
			
			&:after
				border-color $terciary-color
				
		&.__fourth
			background-color $fourth-color
			border-color $fourth-color
			
			&:after
				border-color $fourth-color
				
		&.__fiveth
			background-color $fiveth-color
			border-color $fiveth-color
			
			&:after
				border-color $fiveth-color
		
// jobs
section.jobs 
	text-align center
	padding-left $page-horinzontal-margin-mobile
	padding-right $page-horinzontal-margin-mobile
	
	@media (min-width 768px)
		padding-left $page-horinzontal-margin 
		padding-right $page-horinzontal-margin 
		
	> .title
		font-weight 400
		max-width 400px
		display inline-block
		line-height 1.6em
		margin-bottom 30px

		@media(min-width 992px)
			margin-bottom 60px
		
	> .job-list
		white-space nowrap
		overflow-x auto
		
		@media(min-width 992px)
			white-space normal
		
		> li 
			display inline-grid
			grid-template-columns 100%
			align-items center
			
			@media(min-width 992px)
				grid-template-columns 1fr 1fr

			@media(min-width 992px)
				& + li 
					margin-top 30px

			@media(min-width 992px)
				&:nth-child(even)
					> .images
						text-align left				
				
					> .infos
						grid-column-start 1					
						grid-row-start 1
			
			> .infos 
				padding 30px
				
			> .images
				text-align center
				margin-left -55px				
				padding-left 70px
				padding-right 70px

				@media(min-width 992px)
					margin-left 0px 
					padding-left 0px
					padding-right 0px
					
				> figure
					position relative
					display block
					width 100%
					margin-left auto
					margin-right auto
					
					@media(min-width 992px)
						display inline-block
						max-width 450px
											
					> img
						width 100%
						position relative
						box-shadow 2px 3px 7px 0px rgba($font-color, .3)
						z-index 2
							
					&:nth-child(2)
						top -25px
						left 50px
						
					&:after
						content ''
						display block
						border solid 3px	
						position absolute
						width 100%
						height 100%
						left 10px
						top 10px
						z-index 1
						opacity .3
						
					&:nth-child(2):after
						top -10px
						
					&.__primary
						&:after
							border-color $primary-color
					
					&.__secondary
						&:after
							border-color $secondary-color
							
					&.__terciary
						&:after
							border-color $terciary-color
							
					&.__fourth
						&:after
							border-color $fourth-color
							
					&.__fiveth
						&:after
							border-color $fiveth-color
			
// skills
section.skills 
	text-align center
	padding-left $page-horinzontal-margin-mobile
	padding-right $page-horinzontal-margin-mobile
	margin-bottom 60px

	@media (min-width 768px)
		padding-left $page-horinzontal-margin 
		padding-right $page-horinzontal-margin 
	
	> .title
		font-weight 400
		max-width 400px
		display inline-block
		line-height 1.6em
		margin-bottom 60px
		
	> .skill-list
		text-align left
		font-size 1.125em
		margin-bottom 30px
		
		> h3.subtitle
			font-size 1em
			margin-bottom 15px
			line-height 1.4em
			font-weight 400
			
			&.__primary
					color $primary-color		
				
			&.__secondary
				color $secondary-color		
			
			&.__terciary
				color $terciary-color		
			
			&.__fourth
				color $fourth-color		
			
			&.__fiveth
				color $fiveth-color		
			
		> li 
			display inline-block
			line-height 1.4em
			text-transform lowercase
			color $gray
			font-weight 500 
			
			&:not(:last-child):after
				content '-'
				padding-right 10px
				padding-left 10px

// footer
footer.footer
	flex(row, space-between)
	padding $page-horinzontal-margin-mobile
	color $gray
	
	@media (min-width 768px)
		padding $page-horinzontal-margin 
	> div
		font-size 0.8em
		
.__primary
.__secondary
.__terciary
.__fourth
.__fiveth
	transition-duration .2s